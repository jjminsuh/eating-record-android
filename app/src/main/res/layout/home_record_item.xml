<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp">

    <View
        android:id="@+id/recommend_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/record_rectangle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_recommend_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="아침"
        app:layout_constraintLeft_toLeftOf="@id/recommend_background"
        app:layout_constraintRight_toRightOf="@id/recommend_background"
        app:layout_constraintTop_toTopOf="@id/recommend_background"
        app:layout_constraintBottom_toBottomOf="@id/recommend_background"/>

</androidx.constraintlayout.widget.ConstraintLayout>